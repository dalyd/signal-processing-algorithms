username=$1
password=$2
repo=$3
set -o errexit
virtualenv --python=/opt/mongodbtoolchain/v3/bin/python3 venv
cat > venv/pip.conf << EOF
[global]
index-url = https://pypi.org/simple
extra-index-url = https://${username}:${password}@${repo}
EOF
. venv/bin/activate
pip install -r requirements.txt
pip install .